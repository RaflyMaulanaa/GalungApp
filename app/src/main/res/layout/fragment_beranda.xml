<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <id.example.galungapp.Sliders.SliderView
                    android:id="@+id/sliderView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_indicator"/>
                <LinearLayout
                    android:id="@+id/pagesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"/>
            </RelativeLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp"
                android:paddingTop="8dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutMenu"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">
                    <LinearLayout
                        android:id="@+id/ll1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:gravity="center|start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorbgedittextcoklat"
                            android:text="Layanan Kami"
                            android:fontFamily="@font/fira_sans_regular"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/colorbgedittextcoklat"/>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_gabahku"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/ll1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:cardBackgroundColor="@color/colorbgcardview1"
                        app:cardCornerRadius="6dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="120dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gabahku"
                                    android:fontFamily="@font/fira_sans_bold"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/informasi_cardView1"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/fira_sans_regular"
                                    android:textSize="12sp"
                                    tools:ignore="MissingConstraints" />
                                <ImageView
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:ignore="MissingConstraints"
                                    android:src="@drawable/ic_rice"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_beras"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/cv_gabahku"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:cardBackgroundColor="@color/colorbgcardview2"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        app:cardCornerRadius="6dp"
                        android:layout_width="0dp"
                        android:layout_height="120dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Beras"
                                    android:fontFamily="@font/fira_sans_bold"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/informasi_cardView2"
                                    android:textColor="@android:color/white"
                                    android:fontFamily="@font/fira_sans_regular"
                                    android:textSize="12sp"
                                    tools:ignore="MissingConstraints" />
                                <ImageView
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:ignore="MissingConstraints"
                                    android:src="@drawable/ic_ricerice"/>
                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:id="@+id/ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/cv_beras"
                        tools:ignore="MissingConstraints">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_modaltanam"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="@color/colorbgcardview3"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorbgcardview1"
                                    android:textStyle="bold"
                                    android:text="Modal Tanam"
                                    android:fontFamily="@font/fira_sans_bold"/>
                                <ImageView
                                    android:layout_marginTop="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_payment"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_gadaisawah"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="@color/colorbgcardview3"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorbgcardview1"
                                    android:textStyle="bold"
                                    android:text="Gadai Sawah"
                                    android:fontFamily="@font/fira_sans_bold"/>
                                <ImageView
                                    android:layout_marginTop="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_money"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/ll2"
                        tools:ignore="MissingConstraints">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_alat"
                            android:layout_marginBottom="16dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="@color/colorbgcardview4"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="114dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/fira_sans_bold"
                                    android:gravity="center"
                                    android:text="Alat Tani"
                                    android:textColor="@color/colorbgcardview1"
                                    android:textStyle="bold" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:src="@drawable/ic_tractor" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_bibitpupuk"
                            android:layout_marginBottom="16dp"
                            android:layout_marginStart="4dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            app:cardBackgroundColor="@color/colorbgcardview4"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            app:cardCornerRadius="6dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/colorbgcardview1"
                                    android:textStyle="bold"
                                    android:text="Bibit dan pupuk"
                                    android:fontFamily="@font/fira_sans_bold"/>
                                <ImageView
                                    android:layout_marginTop="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_tree"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:id="@+id/linearListBeras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/constraintLayoutMenu"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">
                    <LinearLayout
                        android:id="@+id/ll4"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:gravity="center|start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorbgedittextcoklat"
                            android:text="Beras"
                            android:fontFamily="@font/fira_sans_bold"/>
                        <TextView
                            android:id="@+id/tv_lihatsemuaberas"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fira_sans_regular"
                            android:text="Lihat Semua"
                            android:textSize="10dp"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerBeras"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        app:layout_constraintTop_toBottomOf="@id/ll4" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearListBibitPupuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linearListBeras"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorbgedittextcoklat"
                            android:text="Bibit &amp; Pupuk"
                            android:fontFamily="@font/fira_sans_bold"/>
                        <TextView
                            android:id="@+id/tv_lihatsemuabibitpupuk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fira_sans_regular"
                            android:text="Lihat Semua"
                            android:textSize="10dp"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerBibitPupuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearListAlat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/linearListBibitPupuk"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:ignore="MissingConstraints"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/colorbgedittextcoklat"
                            android:text="Alat Tani"
                            android:fontFamily="@font/fira_sans_bold"/>
                        <TextView
                            android:id="@+id/tv_lihatsemuaalat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/fira_sans_regular"
                            android:text="Lihat Semua"
                            android:textSize="10dp"
                            android:gravity="center_vertical|right"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerAlat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>