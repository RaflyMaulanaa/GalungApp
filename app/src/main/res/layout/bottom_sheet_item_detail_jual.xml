<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_hideable="true"
    android:orientation="vertical"
    app:behavior_peekHeight="80dp"
    android:id="@+id/bottom_sheet">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">
        <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="8dp"
            android:elevation="8dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_gambarbottom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/dua"
                    android:scaleType="centerCrop">
                </ImageView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/tv_namabottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gabah Thailand"
                android:fontFamily="@font/fira_sans_bold"
                android:textStyle="bold"
                android:textColor="@color/textTitleGabah"
                android:textSize="16sp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tv_hargabottom"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="100.000 /Kg"
                android:fontFamily="@font/fira_sans_regular"
                android:textColor="@color/textColor"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Jumlah"
                    android:fontFamily="@font/fira_sans_regular"
                    android:textColor="@color/textTitleGabah"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bolder_coklat"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btn_kurang"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text="-"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:fontFamily="@font/fira_sans_bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/tv_jumlahbelibottom"
                            android:layout_width="wrap_content"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:fontFamily="@font/fira_sans_bold"
                            android:textStyle="bold"
                            android:textColor="@color/textTitleGabah"
                            android:textSize="16sp"/>
                        <Button
                            android:id="@+id/btn_tambah"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:text="+"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:fontFamily="@font/fira_sans_regular"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_tambahkeranjang"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:textStyle="bold"
            android:fontFamily="@font/fira_sans_bold"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="Tambahkan Ke Keranjang"
            android:clickable="true"
            android:textAllCaps="false"
            android:foreground="?android:attr/selectableItemBackground"/>
    </LinearLayout>
</LinearLayout>